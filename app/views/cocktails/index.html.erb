<div class="container">
  <h1 id="index-h1"class="text-center mb-35 mt-3">Your cocktails</h1>

  <div class="d-flex flex-wrap justify-content-around">
    <%@cocktails.each do |cocktail| %>
      <div class="card mb-3" style="width: 18rem;">
        <%= cl_image_tag cocktail.photo.key, height: 300, width: 286, crop: :fill %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
