<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @img_url %>);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
    <p>Make your own cocktail recipe and get drunk TONIGHT !!</p>
  </div>
</div>
<div class="container">
  <% @cocktail.doses.each do |dose| %>
     <p class="text-center"><%= dose.ingredient.name %>, <%= dose.description %>, <%= link_to '☠︎', dose_path(dose), method: :delete, data: { confirm: 'Are you fucking sure?' } %></p>
  <% end %>

  <p class="text-center"><%= link_to 'Back to cocktails', cocktails_path%></p>


  <h1 class="text-center">Create a new dose</h1>

    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <p class="text-center"><%= f.submit class: "btn btn-primary" %></p>
    <% end %>
</div>

