<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  </head>

  <body>
    <%= yield %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <div class="footer">
      <h6 class="text-center">Share it with your friends !</h6>
      <ul class="list-group list-group-horizontal d-flex justify-content-center">
        <div class="logo-footer">
          <%= link_to cocktails_path do %>
            <li class="list-inline text-center"><i class="fab fa-facebook"></i></li>
          <% end %>
          <%= link_to cocktails_path do %>
            <li class="list-inline text-center"><i class="fab fa-twitter-square"></i></li>
          <% end %>
          <%= link_to cocktails_path do %>
            <li class="list-inline text-center"><i class="fab fa-instagram"></i></li>
          <% end %>
        </div>
      </ul>

    </div>
  </body>
</html>
<%=  %>
